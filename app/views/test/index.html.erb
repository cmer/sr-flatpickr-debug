<main class="p-20" data-controller="foobar">
  <%= form_with url: "#" do |f| %>
    <div class="flex space-y-10 flex-col">
      <div>
        <%= f.label :start_date, "With Stimulus Controller attached", class: "block mb-2" %>
        <%= f.text_field :start_date,
          id: "transition-start_date",
          class: "p-2 border border-gray-300 rounded-md",
          data: {
            controller: "foobar",
            reflex: "change->Test#value_changed"
          }
        %>
      </div>
      <div>
        <%= f.label :start_text, "Without Stimulus Controller Attached", class: "block mb-2" %>
        <%= f.text_field :start_text,
          class: "p-2 border border-gray-300 rounded-md",
          data: {
            reflex: "change->Test#value_changed"
          }
        %>
      </div>
      <div>
        <button class="rounded-md p-2 px-4 bg-indigo-600 hover:bg-indigo-700 text-white">Submit</button>
      </div>
    </div>
  <% end %>
  <div class="mt-20">
    <div id="result">
      Reflex result will go here
    </div>
  </div>
</main>
